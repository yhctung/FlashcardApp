<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/flashcard_question"
        android:layout_width="350dp"
        android:layout_height="179dp"
        android:layout_alignTop="@+id/flashcard_answer"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="17dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="17dp"
        android:background="@drawable/card_background"
        android:elevation="5dp"
        android:gravity="center"
        android:text="@string/start_question"
        android:textColor="#ffffff"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/flashcard_answer"
        android:layout_width="350dp"
        android:layout_height="179dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="17dp"
        android:layout_marginTop="129dp"
        android:layout_marginEnd="17dp"
        android:background="@drawable/card_background_answer"
        android:gravity="center"
        android:text="@string/start_answer"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="40sp"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/Plus"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="292dp"
        android:layout_marginBottom="24dp"
        app:srcCompat="@drawable/plus" />

    <ImageView
        android:id="@+id/Next"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignStart="@+id/Plus"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="270dp"
        android:layout_marginBottom="150dp"
        app:srcCompat="@drawable/next" />

</RelativeLayout>